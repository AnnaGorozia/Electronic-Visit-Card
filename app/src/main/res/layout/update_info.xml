<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/profile_up_fragment"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#159BE9">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="#ffffff"
                android:text="Done"
                android:backgroundTint="#159BE9"
                android:onClick="Done"
                android:textSize="17sp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textColor="#ffffff"
                android:text="Cancel"
                android:backgroundTint="#159BE9"
                android:onClick="Cancel"
                android:textSize="17sp"/>


            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_centerInParent="true"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/profile"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"/>


            <TextView
                android:id="@+id/full_name"
                android:layout_marginTop="10dp"
                android:layout_below="@id/profile_image"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hatake Kakashi"
                android:textSize="29sp"
                android:textColor="#FFFF"
                android:typeface="sans"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Identities"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:paddingBottom="10dp"
            android:layout_below="@id/profile_up_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/name_icon_id"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/name_icon"/>

            <LinearLayout
                android:layout_marginLeft="70dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/first_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="First name"
                        android:textSize="17sp"
                        android:textColor="#2E2E2E"/>

                    <EditText
                        android:id="@+id/edit_first_name"
                        android:layout_below="@id/first_name"
                        android:background="@drawable/background_border"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="60dp"
                        android:paddingLeft="10dp"
                        android:paddingBottom="3dp"
                        android:paddingTop="3dp"
                        android:text="Kakashi"
                        android:textSize="15sp"
                        android:textColor="#2E2E2E"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/last_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="Last name"
                        android:textSize="17sp"
                        android:textColor="#2E2E2E"/>

                    <EditText
                        android:id="@+id/edit_last_name"
                        android:layout_below="@id/last_name"
                        android:background="@drawable/background_border"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="60dp"
                        android:paddingLeft="10dp"
                        android:paddingBottom="3dp"
                        android:paddingTop="3dp"
                        android:text="Hatake"
                        android:textSize="15sp"
                        android:textColor="#2E2E2E"/>

                </RelativeLayout>


            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_below="@id/Identities"
            android:layout_width="fill_parent"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="10dp"
            android:layout_height="2dip"
            android:background="#BDBDBD" />


        <RelativeLayout
            android:id="@+id/phone_numbers"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:paddingBottom="10dp"
            android:layout_below="@id/Identities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/phone_icon_id"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/phone_icon"/>

            <LinearLayout
                android:layout_marginLeft="70dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/phone_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="Personal phone number"
                        android:textSize="17sp"
                        android:textColor="#6E6E6E"/>

                    <EditText
                        android:id="@+id/personal_phone_number"
                        android:layout_below="@id/phone_number"
                        android:background="@drawable/background_border"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="60dp"
                        android:paddingLeft="10dp"
                        android:paddingBottom="3dp"
                        android:paddingTop="3dp"
                        android:text="(598) 465-565"
                        android:textSize="15sp"
                        android:textColor="#2E2E2E"/>


                </RelativeLayout>


            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_below="@id/phone_numbers"
            android:layout_width="fill_parent"
            android:layout_marginLeft="90dp"
            android:layout_height="2dip"
            android:background="#BDBDBD" />


        <RelativeLayout
            android:id="@+id/emails"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:paddingBottom="10dp"
            android:layout_below="@id/phone_numbers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/email_icon_id"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/email_icon"/>

            <LinearLayout
                android:layout_marginLeft="70dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="Personal email address"
                        android:textSize="17sp"
                        android:textColor="#6E6E6E"/>

                    <EditText
                        android:id="@+id/personal_email"
                        android:layout_below="@id/email"
                        android:background="@drawable/background_border"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="60dp"
                        android:paddingLeft="10dp"
                        android:paddingBottom="3dp"
                        android:paddingTop="3dp"
                        android:text="msakh12@freeuni.edu.ge"
                        android:textSize="15sp"
                        android:textColor="#2E2E2E"/>


                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_below="@id/emails"
            android:layout_width="fill_parent"
            android:layout_marginLeft="90dp"
            android:layout_height="2dip"
            android:background="#BDBDBD" />


        <RelativeLayout
            android:id="@+id/companies"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:paddingBottom="10dp"
            android:layout_below="@id/emails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/company_icon_id"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/company_icon"/>

            <LinearLayout
                android:layout_marginLeft="70dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/first_company_position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="Software Engineer"
                        android:textSize="17sp"
                        android:textColor="#6E6E6E"/>

                    <EditText
                        android:id="@+id/first_company"
                        android:layout_below="@id/first_company_position"
                        android:background="@drawable/background_border"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="60dp"
                        android:paddingLeft="10dp"
                        android:paddingBottom="3dp"
                        android:paddingTop="3dp"
                        android:text="Google"
                        android:textSize="15sp"
                        android:textColor="#2E2E2E"/>

                </RelativeLayout>


            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>